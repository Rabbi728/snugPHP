{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "snugphp/starter",
    "description": "A simple PHP framework",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "require": {
        "php": ">=7.4",
        "snugphp/framework": "dev-master"
    },
    "scripts": {
        "setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Rabbi728/snugphp-framework.git"
        }
    ]
}